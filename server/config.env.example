# Database Configuration
MONGO_URI=mongodb://localhost:27017/manomitra

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Client Configuration
